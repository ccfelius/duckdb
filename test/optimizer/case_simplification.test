# name: test/optimizer/case_simplification.test
# description: Test case simplification
# group: [optimizer]

#statement ok
#pragma disabled_optimizers='statistics_propagation';

statement ok
create table all_types as select * exclude(small_enum, medium_enum, large_enum) from test_all_types() limit 0;

statement ok
SELECT (
      EXISTS(
          (
              SELECT
                  DISTINCT outer_alltypes."BIGINT", outer_alltypes."INT"
              FROM all_types inner_alltypes_1
              WHERE inner_alltypes_1."BIGINT" GROUP BY NULL
          )
          UNION BY NAME
          (
              SELECT inner2."FLOAT" from all_types inner2
          )
      ) IS DISTINCT FROM outer_alltypes."struct"
  )
FROM all_types outer_alltypes GROUP BY ALL;

mode skip

statement ok
CREATE TABLE test(X INTEGER);

statement ok
PRAGMA explain_output = OPTIMIZED_ONLY;

query I nosort casenorm1
EXPLAIN SELECT CASE WHEN 1=1 THEN X+1 ELSE X+2 END FROM test
