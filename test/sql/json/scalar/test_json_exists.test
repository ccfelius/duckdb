# name: test/sql/json/scalar/test_json_exists.test
# description: Test JSON exists
# group: [scalar]

require json

statement ok
pragma enable_verification

query I
SELECT json_exists('{"duck": 42}', '$.duck')
----
true

query I
with path AS (
    SELECT '$.duck' p
)
SELECT json_exists('{"duck": 42}', p) FROM path
----
true

query I
SELECT json_exists('{"duck": 42}', '$.goose')
----
false

query I
with path AS (
    SELECT '$.goose' p
)
SELECT json_exists('{"duck": 42}', p) FROM path
----
false

query I
SELECT json_exists('{"duck": 42}', ['$.duck', '$.goose'])
----
[true, false]
