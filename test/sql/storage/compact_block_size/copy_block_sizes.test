# name: test/sql/storage/compact_block_size/copy_block_sizes.test
# description: Test copying between databases with different block sizes.
# group: [compact_block_size]

require noforcestorage

require skip_reload

statement ok
ATTACH '__TEST_DIR__/small.db' (BLOCK_SIZE 16384);

statement ok
CREATE TABLE small.tbl AS SELECT range AS i FROM range(10000);

statement ok
DETACH small;

load __TEST_DIR__/small.db

statement ok
ATTACH '__TEST_DIR__/x.db';

statement ok
COPY FROM DATABASE small TO x;