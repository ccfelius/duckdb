# name: test/sql/storage/vacuum/test_vacuum_deletes_simple.test
# description: Verify that deleting rows and re-appending does not leak memory
# group: [partial_blocks]

require skip_reload

load __TEST_DIR__/vacuum_deletes_simple.db

statement ok
CREATE TABLE integers(i INTEGER);

# verify that deleting an entire table in a loop doesn't increase database size (i.e. deletes are vacuumed correctly)
loop i 0 100

statement ok
INSERT INTO integers SELECT * FROM range(1000000);

statement ok
DELETE FROM integers

query I
SELECT total_blocks * block_size < 15 * 262144 FROM pragma_database_size()
----
true

endloop
