# name: test/sql/copy/s3/upload_small_file.test
# description: Copy small csv/parquet files from and to S3.
# group: [s3]

require parquet

require httpfs

require-env S3_TEST_SERVER_AVAILABLE 1

# override the default behaviour of skipping HTTP errors and connection failures: this test fails on connection issues
set ignore_error_messages

statement ok
SET s3_secret_access_key='S3RVER';SET s3_access_key_id='S3RVER';SET s3_region='eu-west-1'; SET s3_endpoint='http://localhost:4923';

# Parquet file
statement ok
COPY (select i from range(0,10) tbl(i)) TO 's3://test-bucket/multipart/export_small.parquet' (FORMAT 'parquet');

query II
SELECT count(i), sum(i) FROM "s3://test-bucket/multipart/export_small.parquet";
----
10	45

# CSV file
statement ok
COPY (select i from range(0,10) tbl(i)) TO 's3://test-bucket/multipart/export_small.csv' WITH (HEADER 1);

query II
SELECT count(i), sum(i) FROM "s3://test-bucket/multipart/export_small.csv";
----
10	45