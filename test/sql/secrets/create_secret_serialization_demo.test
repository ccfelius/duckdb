# name: test/sql/secrets/create_secret_serialization_demo.test
# description: Demo of secret serialization
# group: [tmp]

require httpfs

require parquet

load __TEST_DIR__/test_serialize_secrets.db

statement ok
CREATE SECRET s1 TYPE s3
USING config
WITH (
    KEY_ID 'mekey',
    SECRET 'mesecret',
    REGION 'meregion'
)

statement ok
CREATE SECRET s2 TYPE s3
USING config
WITH (
    KEY_ID 'mekey2',
    SECRET 'mesecret2',
    REGION 'meregion2'
)

statement ok
CALL duckdb_secrets_to_file("./serialized_secrets.bin");

restart

# After restart secrets are gone
query IIIII
FROM duckdb_secrets();
----

# Load them from a file
statement ok
CALL duckdb_secrets_from_file("./serialized_secrets.bin");

# Voila!
query IIIII
FROM duckdb_secrets();
