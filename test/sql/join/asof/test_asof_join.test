statement ok
PRAGMA enable_verification

#
# Inequality only
#

# Use doubles for readable infinities
statement ok
CREATE TABLE events0 (begin DOUBLE, value INTEGER);

statement ok
INSERT INTO events0 VALUES
	(1, 0),
	(3, 1),
	(6, 2),
	(8, 3)
;

# Window version
query II
SELECT p.ts, e.value
FROM 
	range(0,10) p(ts)
LEFT JOIN (
	SELECT value, begin, 
		LEAD(begin, 1, 'infinity'::DOUBLE) OVER (ORDER BY begin ASC) AS end
	FROM events0
) e
ON p.ts >= e.begin AND p.ts < e.end
ORDER BY p.ts ASC
----
0	NULL
1	0
2	0
3	1
4	1
5	1
6	2
7	2
8	3
9	3

# ON inequality only
query II
SELECT p.ts, e.value
FROM range(0,10) p(ts) ASOF JOIN events0 e
ON p.ts >= e.begin
ORDER BY p.ts ASC
