----
3	NULL	NULL	NULL

# test on a sequence
statement ok
CREATE SEQUENCE seq;

query I
SELECT list_bit_or([nextval('seq')])
----
1

query I
SELECT list_bit_or([nextval('seq')])
----
2

# test on a list of integers
statement ok
CREATE TABLE integers(i INTEGER[]);

statement ok
INSERT INTO integers VALUES ([3, 7, 15, 31, 3, 15])

query I
SELECT list_bit_or(i) FROM integers WHERE i > [100, 200]
----

# test on an empty list
query I
SELECT list_bit_or([]) FROM integers
----
NULL

statement ok
