require json

statement ok
CREATE OR REPLACE function demo(n, z) AS TABLE (
  SELECT list_transform(range(0, n), LAMBDA x : z) AS row
);

query I
FROM demo(3, 0);
----
[0, 0, 0]

statement ok
CREATE OR REPLACE function demo(n, z) AS TABLE (
  SELECT list_transform(range(0, n), LAMBDA x : 0 + z) AS row
);

query I
FROM demo(3, 0);
----
[0, 0, 0]

statement ok
CREATE OR REPLACE function demo(n, z) AS TABLE (
  SELECT list_transform(range(0, n), LAMBDA x : (z -> 'a')) AS row
);

query I
FROM demo(3, {'a': 2});
----
[2, 2, 2]